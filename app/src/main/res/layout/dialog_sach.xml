<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_white"
    android:gravity="center">

    <EditText
        android:id="@+id/ed_TenS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:fontFamily="@font/biorhyme_bold"
        android:background="@drawable/boder_box"
        android:layout_marginBottom="20dp"
        android:inputType="textPersonName"
        android:hint="Nhập Tên Sách . . ." />
    <EditText
        android:id="@+id/ed_Gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:background="@drawable/boder_box"
        android:layout_marginBottom="20dp"
        android:inputType="number"
        android:fontFamily="@font/biorhyme_bold"
        android:hint="Nhập Giá Sách . . ." />
    <Spinner
        android:id="@+id/sp_Sach"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/boder_box"
        android:layout_marginBottom="20dp"
        android:autofillHints="Chọn loại sách"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="end"
        android:layout_marginRight="50dp">
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/cancel"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/img_save"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/save" />
    </LinearLayout>


</LinearLayout>